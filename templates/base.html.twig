    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('list') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-md navbar-light bg-faded">
    <a class="navbar-brand d-md-none" href="#">Brand</a>
    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="d-md-flex d-block w-100">
        <div class="collapse navbar-collapse mx-auto w-auto justify-content-center" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="navbar-brand mx-2 d-none d-md-inline" href="{{ path('homePage') }}">Acceuil</a>
                <a class="navbar-brand mx-2 d-none d-md-inline" href="{{ path('catalogues') }}">Catalogues</a>
                <a class="navbar-brand mx-2 d-none d-md-inline" href="{{ path('produits') }}">Produits</a>
                <a class="navbar-brand mx-2 d-none d-md-inline" href="{{ path('commandes') }}">Commandes</a>
                {% if is_granted("ROLE_USER") %}
                <a class="navbar-brand mx-2 d-none d-md-inline" href="{{ path('logout') }}">déconnexion</a>
                {% else %}
                <a class="navbar-brand mx-2 d-none d-md-inline" href="{{ path('login') }}">connexion</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>
{% block body %}{% endblock %}

</body>
</html>
