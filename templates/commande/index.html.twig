{% extends 'base.html.twig' %}

{% block title %}EuroPlant{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center">
        <h1>Liste des commandes</h1>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-8">
            {% if commandes is empty %}
                <p>Aucun commande</p>
            {% else %}
                <table class="table table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">User</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if app.user.getRoles() == ['ROLE_ADMIN','ROLE_USER'] %}
                                {% for commande in commandes %}
                                    <tr>
                                        <td><a href="{{ path('commande', {commandeId: commande.id}) }}">{{ commande.date|date("m/d/Y h:i:s") }}</a></td>
                                        <td>{{ commande.user.email }}</td>
                                    </tr>
                                {% endfor %}
                            {% elseif app.user.getRoles() == ['ROLE_USER'] %}
                                {% for commande in commandes %}
                                    {% if app.user.getId() == commande.user.getId() %}
                                        <tr>
                                            <td><a href="{{ path('commande', {commandeId: commande.id}) }}">{{ commande.date|date("m/d/Y h:i:s") }}</a></td>
                                            <td>{{ commande.user.email }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
            {% endif %}
        </div>
    </div>
{% endblock %}
