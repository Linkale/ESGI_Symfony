{% extends 'base.html.twig' %}

{% block title %}EuroPlant - {{ catalogue.nom }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <a href="{{ path('update_catalogue', {id: catalogue.id})}}">Modifier</a>
            <a href="{{ path('delete_catalogue', {id: catalogue.id})}}">Supprimer</a>
            <h1>{{ catalogue.nom }}</h1>
            <p>{{ catalogue.description }}</p>
            <ul>
                {% for produit in catalogue.produits %}
                    <li><a href="{{ path('produit', {produitName: produit.nom}) }}">{{ produit.nom }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
