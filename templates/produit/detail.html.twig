{% extends 'base.html.twig' %}

{% block title %}EuroPlant - {{ produit.nom }}{% endblock %}

{% block body %}

  <!--Main layout-->
  <main class="my-5">
  
    <div class="container">
    
      <!--Section: Content-->
      <section class="text-center">
      <h4 class="mb-4"><strong>Produit : </strong> {{ produit.nom }}  </h4>


        <div class="row mt-5">
      

          <div class="col-12 mb-5">
            <div class="card" style="border: solid 1px">
              <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
              </div>
              <div class="card-body">
                <h5 class="card-title mt-4">{{ produit.nom }}</h5>
                <p class="card-text">
                  {{ produit.description }}
                </p>
                {% if app.user.getRoles() == ['ROLE_ADMIN','ROLE_USER'] %}
                  <a  href="{{ path('update_produit', {id: produit.id})}}" class="btn btn-primary mb-4">Modifier</a>
                  <a  href="{{ path('delete_produit', {id: produit.id})}}" class="btn btn-primary mb-4">Supprimer</a>
                {% endif %}
              </div>
            </div>
          </div>
          

     

        </div>

      </section>
      <!--Section: Content-->


    </div>
  </main>
  <!--Main layout-->

{% endblock %}